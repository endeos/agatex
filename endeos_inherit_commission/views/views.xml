<odoo>
    <data>
        <record id="view_sale_order_line_agent_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.line.agent.tree.inherit</field>
            <field name="model">sale.order.line.agent</field>
            <field name="inherit_id" ref="module_original.view_sale_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='commission_id']" position="replace">
                    <field name="commission_ids"
                           domain="['|', ('settlement_type', '=', 'sale_invoice'), ('settlement_type', '=', False)]"
                           widget="many2many_tags" options="{'no_create': True}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
